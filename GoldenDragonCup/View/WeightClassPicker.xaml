<Window x:Class="GoldenDragonCup.View.WeightClassPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeightClassPicker" Height="361" Width="370">
    <Grid Background="#FFC04000">
        <ListBox Height="241" HorizontalAlignment="Left" Margin="22,57,0,0" Name="lstb_outView" VerticalAlignment="Top" Width="120" />
        <ListBox Height="241" HorizontalAlignment="Left" Margin="205,57,0,0" Name="lstb_inView" VerticalAlignment="Top" Width="120" />
        <Button Content="&gt;" Height="30" HorizontalAlignment="Left" Margin="157,95,0,0" Name="btn_add" VerticalAlignment="Top" Width="30" Click="btn_add_Click" />
        <Button Content="&lt;" Height="30" HorizontalAlignment="Left" Margin="157,131,0,0" Name="btn_remove" VerticalAlignment="Top" Width="30" Click="btn_remove_Click" />
        <Label Content="Out of view" Height="28" HorizontalAlignment="Left" Margin="22,23,0,0" Name="lbl_outView" VerticalAlignment="Top" Width="120" FontSize="14" FontWeight="Bold" />
        <Label Content="In view" Height="28" HorizontalAlignment="Left" Margin="205,23,0,0" Name="lbl_inView" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="14" />
        <Button Content="Done" Height="50" HorizontalAlignment="Left" Margin="148,248,0,0" Name="btn_OK" VerticalAlignment="Top" Width="51" Click="btn_OK_Click" />
    </Grid>
</Window>
